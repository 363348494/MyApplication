<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.news.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/MainButton"
                android:drawableTop="@drawable/news_btn_selector"
                android:text="新闻"
                android:textColor="@drawable/main_btn_text_selector" />

            <RadioButton
                style="@style/MainButton"
                android:drawableTop="@drawable/live_btn_selector"
                android:text="直播"
                android:textColor="@drawable/main_btn_text_selector" />

            <RadioButton
                style="@style/MainButton"
                android:drawableTop="@drawable/topic_btn_selector"
                android:text="话题"

                android:textColor="@drawable/main_btn_text_selector" />

            <RadioButton
                style="@style/MainButton"
                android:drawableTop="@drawable/me_btn_selector"
                android:text="我"

                android:textColor="@drawable/main_btn_text_selector" />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
